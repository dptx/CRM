
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>
<button type="button" class="btn btn-default" onclick="ToggleCustomerForm()">Add a New Customer</button>

<div class="container">
    <div class="row">
        <div class="col-sm-7" id="addCustomerDiv" hidden="hidden">
            @using (Html.BeginForm("Save", "Customer", FormMethod.Post, new { id = "saveCustomerForm", @class = "form-horizontal", role = "form" }))
            {
                Html.RenderPartial("_CustomerForm", new CRM.Models.CustomerModel());

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Save" />
                        <button type="button" class="btn btn-default" onclick="ToggleCustomerForm()">Close</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-sm-5" hidden="hidden"></div>
    </div>
    
</div>
<br /><br />
<div class="container" id="customerList"></div>

@{ Html.RenderPartial("_NoteModal", new CRM.Models.NoteModel()); }


@section Scripts {

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/customer")

}