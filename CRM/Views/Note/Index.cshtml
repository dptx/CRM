@model CRM.Models.CustomerNotesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h4>Customer Details.</h4>
<hr />
<div class="form-group">
    @Html.LabelFor(m => m.Customer.FirstName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.FirstName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.LastName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.LastName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Company, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.Company, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Email, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.Email, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Address, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.Address, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Phone, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DisplayFor(m => m.Customer.Phone, new { @class = "form-control" })
    </div>
</div>
<br /><br />
<table class="table table-striped">
    <tr>
        <th>
            Note Author
        </th>
        <th>
            Note
        </th>
        <th>
            Date Added
        </th>
        <th></th>
    </tr>

    @foreach (var note in Model.Notes)
    {
        <tr>
            <td>
                @Html.DisplayFor(n => note.UserName)
            </td>
            <td>
                @Html.DisplayFor(n => note.Body)
            </td>
            <td>
                @Html.DisplayFor(n => note.Created)
            </td>
            <td>
            </td>
        </tr>
    }

</table>

